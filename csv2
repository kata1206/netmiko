import textfsm
import csv
import datetime

#ログファイルに付与する日時形式を定義
datetime_now = datetime.datetime.now().strftime('%Y%m%d%H%M%S')

#ログファイル名を設定(ホスト名+日時)
logfile = './logfile/' + '_' + datetime_now + '.csv'	

with open('Fortigate2_20240818232342.log') as f:
    inventory_text = f.read()

with open('fortinet_get_system_arp.textfsm') as f:
    table = textfsm.TextFSM(f)
    result = table.ParseText(inventory_text)

with open(logfile, 'w', newline='') as f: # Windowsの場合、newline=''が必要
    w = csv.writer(f)
    w.writerow(table.header)
    w.writerows(result)
